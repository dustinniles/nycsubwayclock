# Geographic coordinates for sunrise and sunset calculations
LATITUDE=40.682387
LONGITUDE=-73.963004

# Timezone
TIMEZONE=America/New_York

# Subway Configuration
SUBWAY_ROUTE=C
STOP_IDS=A44N,A44S
MAX_TRAINS_DISPLAY=4
MAX_MINUTES_AWAY=30
MAX_TRAINS_PER_DIRECTION=3

# Direction Labels (2-letter borough codes: Ma=Manhattan, Bk=Brooklyn, Qn=Queens, Bx=Bronx, Si=Staten Island)
# Note: Use lowercase for second letter as custom MTA font may not support all uppercase letters
DIRECTION_NORTH_LABEL=Ma
DIRECTION_SOUTH_LABEL=Bk

# Display Timing (seconds)
DISPLAY_REFRESH_INITIAL=3
DISPLAY_REFRESH_CYCLE=5

# Matrix Hardware Configuration
MATRIX_ROWS=32
MATRIX_COLS=64
MATRIX_CHAIN_LENGTH=2
MATRIX_GPIO_SLOWDOWN=4  # Higher = less CPU usage but may affect quality. 4 recommended for Pi 4
MATRIX_PWM_LSB_NANOSECONDS=130  # Higher = less flicker but more CPU. 130 is good balance
MATRIX_PWM_BITS=7  # Balance between smoothness and CPU usage. 5=flickery, 11=smooth but CPU-heavy
MATRIX_HARDWARE_MAPPING=adafruit-hat
MATRIX_SHOW_REFRESH_RATE=false  # Disable on-screen refresh rate display
MATRIX_BRIGHTNESS=85  # Tested maximum safe brightness is 90%, set to 85% for safety margin

# Font Configuration
FONT_PATH=MTA.ttf
FONT_SIZE=16

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/subway_clock.log
LOG_MAX_BYTES=10485760  # 10MB per log file
LOG_BACKUP_COUNT=5       # Keep 5 old log files (50MB total max)

# Virtual environment path (legacy - kept for compatibility)
VENV_PATH=/root/venv

# Path to the main script (legacy - kept for compatibility)
DISPLAY_TEXT_SCRIPT=/root/nycsubwayclock/main.py

# Lock file path to prevent multiple instances of the script (legacy)
LOCK_FILE_PATH=/tmp/display_text.lock

# Path to the Python binary in the virtual environment (legacy)
PYTHON_BIN=/root/venv/bin/python

# Matrix refresh and stability settings
MATRIX_LIMIT_REFRESH_HZ=60  # Limit refresh to 60Hz to reduce CPU
MATRIX_DISABLE_HARDWARE_PULSING=false
